@page "/exercisetypes/details"
@using Microsoft.EntityFrameworkCore
@using BeFitBlazor.Models
@inject IDbContextFactory<BeFitBlazor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>ExerciseType</h2>
    <hr />
    @if (exercisetype is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@exercisetype.Name</dd>
        </dl>
        <div>
            <a href="@($"/exercisetypes/edit?id={exercisetype.Id}")">Edit</a> |
            <a href="@($"/exercisetypes")">Back to List</a>
        </div>
    }
</div>

@code {
    private ExerciseType? exercisetype;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        exercisetype = await context.ExerciseType.FirstOrDefaultAsync(m => m.Id == Id);

        if (exercisetype is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
