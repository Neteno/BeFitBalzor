@page "/exercisetypes/delete"
@using Microsoft.EntityFrameworkCore
@using BeFitBlazor.Models
@inject IDbContextFactory<BeFitBlazor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>ExerciseType</h2>
    <hr />
    @if (exercisetype is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@exercisetype.Name</dd>
        </dl>
        <EditForm method="post" Model="exercisetype" OnValidSubmit="DeleteExerciseType" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(exercisetype is null)">Delete</button> |
            <a href="/exercisetypes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private ExerciseType? exercisetype;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        exercisetype = await context.ExerciseType.FirstOrDefaultAsync(m => m.Id == Id);

        if (exercisetype is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteExerciseType()
    {
        using var context = DbFactory.CreateDbContext();
        context.ExerciseType.Remove(exercisetype!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/exercisetypes");
    }
}
