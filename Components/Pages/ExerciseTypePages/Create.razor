@page "/exercisetypes/create"
@using Microsoft.EntityFrameworkCore
@using BeFitBlazor.Models
@inject IDbContextFactory<BeFitBlazor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>ExerciseType</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="ExerciseType" OnValidSubmit="AddExerciseType" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="ExerciseType.Name" class="form-control" /> 
                <ValidationMessage For="() => ExerciseType.Name" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/exercisetypes">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private ExerciseType ExerciseType { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddExerciseType()
    {
        using var context = DbFactory.CreateDbContext();
        context.ExerciseType.Add(ExerciseType);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/exercisetypes");
    }
}
