@page "/trainingsessions/edit"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using BeFitBlazor.Models
@inject IDbContextFactory<BeFitBlazor.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider _authenticationStateProvider

@attribute [Authorize]

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>TrainingSession</h2>
<hr />
@if (TrainingSession is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="TrainingSession" OnValidSubmit="UpdateTrainingSession" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="TrainingSession.Id" value="@TrainingSession.Id" />
                <div class="mb-3">
                    <label for="start" class="form-label">Start:</label>
                    <InputDate id="start" @bind-Value="TrainingSession.Start" class="form-control" />
                    <ValidationMessage For="() => TrainingSession.Start" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="end" class="form-label">End:</label>
                    <InputDate id="end" @bind-Value="TrainingSession.End" class="form-control" />
                    <ValidationMessage For="() => TrainingSession.End" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/trainingsessions">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private TrainingSession? TrainingSession { get; set; }
    private List<ExerciseEntry> ExerciseEntries { get; set; } = new List<ExerciseEntry>();

    async Task<string> getUserId()
    {
        var user = (await _authenticationStateProvider.GetAuthenticationStateAsync()).User;
        var UserId = user.FindFirst(u => u.Type.Contains("nameidentifier"))?.Value;
        return UserId;
    }


    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        var UserId = await getUserId();
        TrainingSession ??= await context.TrainingSession.Where(e => e.CreatedById == UserId).FirstOrDefaultAsync(m => m.Id == Id);
        ExerciseEntries = context.ExerciseEntry.ToList();

        if (TrainingSession is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTrainingSession()
    {
        using var context = DbFactory.CreateDbContext();
        TrainingSession.CreatedById = await getUserId();
        context.Attach(TrainingSession!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TrainingSessionExists(TrainingSession!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/trainingsessions");
    }

    private bool TrainingSessionExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.TrainingSession.Any(e => e.Id == id);
    }
}
